    <main class="main-content">
        <section id="upload-view" class="content-section <%= activeView === 'upload' ? 'active' : '' %>">
            <h2>Upload Image</h2>
            <div class="upload-container">
                <label for="file-input" class="upload-label" title="Click to upload an image">
                    <div class="upload-icon">+</div>
                    <span>Upload</span>
                    <div class="upload-subheading">
                        Images: JPG, PNG, GIF, SVG<br>
                        Archives: ZIP, 7Z, TAR
                    </div>
                </label>
                <input type="file" id="file-input" name="myImage" accept="image/jpeg,image/png,image/gif,image/svg+xml,.zip,.tar,.gz,.7z,application/zip,application/x-tar,application/gzip,application/x-7z-compressed" multiple style="display: none;">
            </div>
            <div id="status"></div>
        </section>

        <section id="gallery-view" class="content-section <%= activeView === 'gallery' ? 'active' : '' %>">
            <div class="gallery-header">
                <h2>Image Gallery</h2>
                <div class="gallery-header-actions">
                    <div class="nav-dropdown">
                        <a id="gallery-sort-toggle" class="nav-dropdown-toggle">Sort</a>
                        <ul id="gallery-sort-menu" class="nav-dropdown-menu">
                            <li data-sort="modified-desc"><span class="tick">✓</span>Date (Newest)</li>
                            <li data-sort="modified-asc"><span class="tick">✓</span>Date (Oldest)</li>
                            <li data-sort="name-asc"><span class="tick">✓</span>Name (A-Z)</li>
                            <li data-sort="name-desc"><span class="tick">✓</span>Name (Z-A)</li>
                            <li data-sort="size-desc"><span class="tick">✓</span>Size (Largest)</li>
                            <li data-sort="size-asc"><span class="tick">✓</span>Size (Smallest)</li>
                            <li data-sort="type-asc"><span class="tick">✓</span>Image Type</li>
                        </ul>
                    </div>
                    <button id="gallery-select-btn" class="header-text-btn">Select</button>
                    <button id="gallery-select-all-btn" class="header-text-btn" style="display: none;">Select All</button>
                    <button id="gallery-delete-btn" class="header-text-btn danger" style="display: none;">Delete</button>
                    <div class="nav-dropdown">
                        <a id="gallery-view-toggle" class="nav-dropdown-toggle">View</a>
                        <ul id="gallery-view-menu" class="nav-dropdown-menu">
                            <li data-viewsize="32" class="active"><span class="tick">✓</span>Medium</li>
                            <li data-viewsize="64"><span class="tick">✓</span>Large</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="image-gallery">
                <%
                    const MIN_DIMENSION_FOR_THUMB = 128;
                    const placeholderSvg = `<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h100v100H0z" fill="#f0f0f0"/><path d="M19.5 80.5l19-25.33 14.5 14.5 20-22.22 16.5 22.22" stroke="#ccc" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/><circle cx="75.5" cy="25.5" r="5" fill="#ccc"/></svg>`;
                    const placeholderUri = `data:image/svg+xml;base64,${Buffer.from(placeholderSvg).toString('base64')}`;
                %>
                <%# This EJS block renders the initial list of images on the server %>
                    <% images.forEach(image => { %> 
                    <% const isLargeEnough = image.width >= MIN_DIMENSION_FOR_THUMB && image.height >= MIN_DIMENSION_FOR_THUMB; %>
                    <div class="image-card"
                         data-id="<%= image.id %>"
                         data-filename="<%= image.displayName %>" 
                         data-link="<%= image.link %>"
                         data-type="<%= image.type %>"
                         data-resolution="<%= image.width %>x<%= image.height %>"
                         data-uploadedat="<%= image.uploadedAt %>"
                         data-lastmodifiedat="<%= image.lastModifiedAt || image.uploadedAt %>"
                         data-size="<%= image.size %>"
                         <% if (image.thumbnails && image.thumbnails['32']) { %>
                            data-thumb-32="/thumbnails/<%= image.thumbnails['32'] %>"
                         <% } %>
                         <% if (image.thumbnails && image.thumbnails['64']) { %>
                            data-thumb-64="/thumbnails/<%= image.thumbnails['64'] %>"
                         <% } %>
                         >
                        <img src="<%= isLargeEnough ? ((image.thumbnails && image.thumbnails['32']) ? '/thumbnails/' + image.thumbnails['32'] : image.link) : placeholderUri %>" alt="<%= image.displayName %>" draggable="false">
                    </div>
                <% }); %>
            </div>

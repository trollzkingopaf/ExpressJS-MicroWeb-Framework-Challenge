    <script>
        // --- DOM Element References ---

        const fileInput = document.getElementById('file-input');
        const gallery = document.getElementById('image-gallery');
        const statusDiv = document.getElementById('status');
        const navUpload = document.getElementById('nav-upload');
        const navGallery = document.getElementById('nav-gallery');
        const uploadView = document.getElementById('upload-view');
        const galleryView = document.getElementById('gallery-view');
        const headerMain = document.querySelector('.header-main');
        const headerSelection = document.querySelector('.header-selection');
        const selectionCloseBtn = document.getElementById('selection-close');
        const selectionCount = document.getElementById('selection-count');
        const toast = document.getElementById('toast');
        const toastMessage = document.getElementById('toast-message');
        const toastTryAgainBtn = document.getElementById('toast-try-again');
        const fullscreenOverlay = document.getElementById('fullscreen-overlay');
        const fullscreenImage = document.getElementById('fullscreen-image');
        const fullscreenFilename = document.getElementById('fullscreen-filename');
        const fullscreenMenuBtn = document.getElementById('fullscreen-menu-btn');
        const fullscreenDropdownMenu = document.getElementById('fullscreen-dropdown-menu');
        const fullscreenDeleteBtn = document.getElementById('fullscreen-delete-btn');
        const fullscreenDownloadBtn = document.getElementById('fullscreen-download-btn');
        const fullscreenOpenLink = document.getElementById('fullscreen-open-link');
        const infoModal = document.getElementById('info-modal');
        const infoFilename = document.getElementById('info-filename');
        const infoDetails = document.getElementById('info-details');
        const deleteConfirmModal = document.getElementById('delete-confirm-modal');
        const deleteConfirmBtn = document.getElementById('delete-confirm-btn');
        const renameModal = document.getElementById('rename-modal');
        const renameBasenameInput = document.getElementById('rename-basename-input');
        const renameSaveBtn = document.getElementById('rename-save-btn');
        const renameExtensionSpan = document.getElementById('rename-extension-span');
        const conflictModal = document.getElementById('conflict-modal');
        const conflictFilename = document.getElementById('conflict-filename');
        const conflictBasenameInput = document.getElementById('conflict-basename-input');
        const conflictExtensionSpan = document.getElementById('conflict-extension-span');
        const conflictRenameBtn = document.getElementById('conflict-rename-btn');
        const conflictOverwriteBtn = document.getElementById('conflict-overwrite-btn');
        const conflictSkipBtn = document.getElementById('conflict-skip-btn');
        const viewMenu = document.getElementById('gallery-view-menu');
        const viewDropdownToggle = document.getElementById('gallery-view-toggle');
        const gallerySelectBtn = document.getElementById('gallery-select-btn');
        const gallerySortMenu = document.getElementById('gallery-sort-menu');
        const gallerySortToggle = document.getElementById('gallery-sort-toggle');
        const gallerySelectAllBtn = document.getElementById('gallery-select-all-btn');
        const galleryDeleteBtn = document.getElementById('gallery-delete-btn');

        const MIN_DIMENSION_FOR_THUMB = 128;
        const placeholderSvg = `<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h100v100H0z" fill="#f0f0f0"/><path d="M19.5 80.5l19-25.33 14.5 14.5 20-22.22 16.5 22.22" stroke="#ccc" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/><circle cx="75.5" cy="25.5" r="5" fill="#ccc"/></svg>`;
        const placeholderUri = `data:image/svg+xml;base64,${btoa(placeholderSvg)}`;

        // --- State Management ---
        let toastTimeout, conflictQueue = [];
        let selectionModeActive = false;
        let currentViewSize; // Will be set by initialization

        // --- Navigation Logic ---
        function showView(viewToShow, pushState = false) {
            [uploadView, galleryView].forEach(view => view.classList.remove('active'));
            [navUpload, navGallery].forEach(nav => nav.classList.remove('active'));

            if (viewToShow === 'gallery') {
                galleryView.classList.add('active');
                navGallery.classList.add('active');
                if (pushState) history.pushState({ view: 'gallery' }, '', '/gallery');
            } else {
                uploadView.classList.add('active');
                navUpload.classList.add('active');
                if (pushState) history.pushState({ view: 'upload' }, '', '/upload');
            }
        }

        navUpload.addEventListener('click', (e) => { e.preventDefault(); showView('upload', true); });
        navGallery.addEventListener('click', (e) => { e.preventDefault(); showView('gallery', true); });

        // Handle browser back/forward button clicks
        window.addEventListener('popstate', (e) => {
            const view = e.state?.view || (location.pathname === '/upload' ? 'upload' : 'gallery');
            showView(view, false);
        });

        // --- API & Gallery Rendering ---
        async function refreshGallery() {
            try {
                const response = await fetch('/pictures');
                if (!response.ok) throw new Error('Failed to fetch images.');
                
                const images = await response.json();
                gallery.innerHTML = ''; // Clear the gallery

                images.forEach(image => { // The API returns images sorted newest first
                    const isLargeEnough = image.width >= MIN_DIMENSION_FOR_THUMB && image.height >= MIN_DIMENSION_FOR_THUMB;
                    let imgSrc;
                    if (isLargeEnough) {
                        const thumbUrl = image.thumbnails ? (image.thumbnails[currentViewSize] || image.thumbnails['32']) : null;
                        // For large images, use a thumbnail if available, otherwise fall back to the full image link.
                        imgSrc = thumbUrl ? `/thumbnails/${thumbUrl}` : image.link;
                    } else {
                        imgSrc = placeholderUri; // Image is too small
                    }

                    const card = document.createElement('div');
                    card.className = 'image-card';
                    card.innerHTML = `<img src="${imgSrc}" alt="${image.displayName}" draggable="false">`;
                    card.dataset.id = image.id;
                    card.dataset.filename = image.displayName;
                    card.dataset.link = image.link;
                    card.dataset.type = image.type;
                    card.dataset.resolution = `${image.width}x${image.height}`;
                    card.dataset.uploadedat = image.uploadedAt;
                    card.dataset.lastmodifiedat = image.lastModifiedAt || image.uploadedAt;
                    card.dataset.size = image.size;
                    if (image.thumbnails && image.thumbnails['32']) {
                        card.dataset.thumb32 = `/thumbnails/${image.thumbnails['32']}`;
                    }
                    if (image.thumbnails && image.thumbnails['64']) {
                        card.dataset.thumb64 = `/thumbnails/${image.thumbnails['64']}`;
                    }
                    gallery.appendChild(card);
                });

                // After rebuilding the gallery, re-apply the current sort order
                const currentSortKey = localStorage.getItem('gallerySortKey') || 'modified-desc';
                applySort(currentSortKey);
            } catch (error) {
                showToast(error.message);
            }
        }

        // --- User Actions (Upload, Delete) ---

        fileInput.addEventListener('change', (e) => {
            const files = e.target.files;
            if (files.length > 0) {
                uploadFiles(files);
            }
        });

        async function uploadFiles(files) {
            const formData = new FormData();
            for (const file of files) {
                formData.append('myImage', file); // Key must match multer's field name
            }

            statusDiv.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch('/pictures', { method: 'POST', body: formData });
                // Status 207 means partial success (e.g., with conflicts)
                if (!response.ok && response.status !== 207) {
                    const errorResult = await response.json().catch(() => ({ message: 'Upload failed with an unknown error.' }));
                    throw new Error(errorResult.message);
                }

                const result = await response.json();
                statusDiv.innerHTML = '';
                fileInput.value = ''; // Reset file input

                if (result.successful && result.successful.length > 0) {
                    await refreshGallery();
                }

                if (result.conflicts && result.conflicts.length > 0) {
                    showToast(result.message);
                    handleConflicts(result.conflicts);
                } else {
                    showToast(result.message);
                    showView('gallery', true);
                }
            } catch (error) {
                statusDiv.innerHTML = '';
                showToast(error.message, true);
                fileInput.value = ''; // Reset on error too
            }
        }

        async function executeDelete(ids) {
            try {
                const response = await fetch(`/pictures`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ ids })
                });
                const result = await response.json();
                if (!response.ok) throw new Error(result.message || 'Deletion failed.');
                showToast(`${ids.length} image(s) deleted successfully.`);
                await refreshGallery();
                // If we deleted the image that was in fullscreen, close it.
                if (fullscreenOverlay.classList.contains('show') && ids.includes(fullscreenOverlay.dataset.currentId)) {
                    hideFullscreen();
                }
                deselectAll();
            } catch (error) {
                showToast(error.message);
            } finally {
                hideDeleteConfirm();
            }
        }

        // --- UI Feedback (Toasts, Modals, Fullscreen) ---

        function showToast(message, showTryAgain = false) {
            clearTimeout(toastTimeout); // Clear any existing timer

            toastMessage.textContent = message;
            toastTryAgainBtn.style.display = showTryAgain ? 'block' : 'none';
            
            toast.classList.add('show');

            if (!showTryAgain) {
                toastTimeout = setTimeout(() => {
                    toast.classList.remove('show');
                }, 5000);
            }
        }

        toastTryAgainBtn.addEventListener('click', () => {
            toast.classList.remove('show');
            fileInput.click(); // Re-open file dialog
        });

        // --- Layout & Sorting ---

        gallerySortToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            const isShown = gallerySortMenu.classList.contains('show');
            hideAllMenus();
            if (!isShown) gallerySortMenu.classList.add('show');
        });

        gallerySortMenu.addEventListener('click', (e) => {
            const targetLi = e.target.closest('li');
            if (!targetLi) return;
            const sortKey = targetLi.dataset.sort;
            localStorage.setItem('gallerySortKey', sortKey);
            applySort(sortKey);
        });

        function applyViewSize(size) {
            currentViewSize = size;

            // Add class to gallery to control image max-height via CSS
            gallery.classList.remove('view-32', 'view-64');
            gallery.classList.add(`view-${size}`);

            // Update active class for the tick mark
            viewMenu.querySelectorAll('li').forEach(li => {
                li.classList.toggle('active', li.dataset.viewsize === size);
            });

            // Update image sources
            const allCards = document.querySelectorAll('.image-card');
            allCards.forEach(card => {
                const img = card.querySelector('img');
                const [width, height] = card.dataset.resolution.split('x').map(Number);
                const isLargeEnough = width >= MIN_DIMENSION_FOR_THUMB && height >= MIN_DIMENSION_FOR_THUMB;

                let newSrc;
                if (isLargeEnough) {
                    // For large images, try the selected thumbnail, then the default, then fall back to the full link.
                    newSrc = card.dataset[`thumb-${size}`] || card.dataset.thumb32 || card.dataset.link;
                } else {
                    // For small images, always use the placeholder.
                    newSrc = placeholderUri;
                }
                
                if (img && newSrc && img.src !== newSrc) {
                    img.src = newSrc;
                }
            });
        }

        function applySort(sortKey) {
            const cards = Array.from(gallery.querySelectorAll('.image-card'));
            // Always remove group headers before any sort operation
            gallery.querySelectorAll('.gallery-group-header').forEach(header => header.remove());
            
            const comparators = {
                'modified-desc': (a, b) => new Date(b.dataset.lastmodifiedat) - new Date(a.dataset.lastmodifiedat),
                'modified-asc': (a, b) => new Date(a.dataset.lastmodifiedat) - new Date(b.dataset.lastmodifiedat),
                'name-asc': (a, b) => a.dataset.filename.localeCompare(b.dataset.filename),
                'name-desc': (a, b) => b.dataset.filename.localeCompare(a.dataset.filename),
                'size-desc': (a, b) => Number(b.dataset.size) - Number(a.dataset.size),
                'size-asc': (a, b) => Number(a.dataset.size) - Number(b.dataset.size),
            };

            if (sortKey === 'type-asc') {
                const groupedByType = cards.reduce((acc, card) => {
                    const type = card.dataset.type;
                    if (!acc[type]) acc[type] = [];
                    acc[type].push(card);
                    return acc;
                }, {});

                const sortedTypes = Object.keys(groupedByType).sort();

                gallery.innerHTML = ''; // Clear gallery to re-render with headers
                sortedTypes.forEach(type => {
                    const header = document.createElement('h3');
                    header.className = 'gallery-group-header';
                    header.textContent = type;
                    gallery.appendChild(header);

                    // Sort cards within the group by name for consistent ordering
                    const sortedCardsInGroup = groupedByType[type].sort((a, b) => a.dataset.filename.localeCompare(b.dataset.filename));
                    sortedCardsInGroup.forEach(card => gallery.appendChild(card));
                });
            } else {
                if (comparators[sortKey]) cards.sort(comparators[sortKey]);
                // Re-append sorted cards to the gallery
                cards.forEach(card => gallery.appendChild(card));
            }

            // Update active tick in menu
            gallerySortMenu.querySelectorAll('li').forEach(li => {
                li.classList.toggle('active', li.dataset.sort === sortKey);
            });
        }

        viewDropdownToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            const isShown = viewMenu.classList.contains('show');
            hideAllMenus();
            if (!isShown) viewMenu.classList.add('show');
        });

        viewMenu.addEventListener('click', (e) => {
            const targetLi = e.target.closest('li');
            if (!targetLi) return;

            const size = targetLi.dataset.viewsize;
            localStorage.setItem('galleryViewSize', size);
            applyViewSize(size);
        });

        // --- Selection Logic ---

        gallerySelectBtn.addEventListener('click', () => {
            // This button now ONLY enters selection mode.
            selectionModeActive = true;
            updateSelectionUI();
        });

        gallerySelectAllBtn.addEventListener('click', () => {
            const allCards = document.querySelectorAll('.image-card');
            const selectedCards = document.querySelectorAll('.image-card.selected');

            // If all are selected, unselect all. Otherwise, select all.
            if (allCards.length > 0 && selectedCards.length === allCards.length) {
                // We only deselect, we don't exit selection mode here.
                document.querySelectorAll('.image-card.selected').forEach(card => card.classList.remove('selected'));
                updateSelectionUI();
            } else {
                selectAll(); // This will select all and update the UI.
            }
        });

        /**
         * Handles a click on an image card.
         * If in selection mode, toggles the card's selected state.
         * Otherwise, opens the image in the fullscreen preview.
         */
        function handleCardClick(card) {
            if (selectionModeActive) {
                card.classList.toggle('selected');
                updateSelectionUI();
            } else {
                showFullscreen(card);
            }
        }

        /**
         * Shows the fullscreen image preview overlay.
         * @param {HTMLElement} card - The image card that was clicked.
         */
        function showFullscreen(card) {
            // Set text/links immediately
            fullscreenFilename.textContent = card.dataset.filename;
            fullscreenOpenLink.href = card.dataset.link;
            fullscreenOverlay.dataset.currentId = card.dataset.id;

            // Set the src on the actual image element so it starts loading
            fullscreenImage.src = card.dataset.link;

            // This technique calculates the correct scaled size of the image to fit within the
            // 90vw/90vh wrapper, ensuring the clickable area matches the visible image.
            const tempImg = new Image();
            tempImg.onload = () => {
                const wrapper = document.querySelector('.fullscreen-image-wrapper');
                const maxWidth = wrapper.clientWidth;
                const maxHeight = wrapper.clientHeight;

                const ratio = Math.min(maxWidth / tempImg.naturalWidth, maxHeight / tempImg.naturalHeight);

                fullscreenImage.style.width = `${tempImg.naturalWidth * ratio}px`;
                fullscreenImage.style.height = `${tempImg.naturalHeight * ratio}px`;
            };
            tempImg.src = card.dataset.link;

            fullscreenOverlay.classList.add('show');
        }

        /**
         * Hides the fullscreen image preview overlay.
         */
        function hideFullscreen() {
            fullscreenOverlay.classList.remove('show');
            fullscreenImage.src = ''; // Clear src to stop video/gif playback
            fullscreenImage.style.width = 'auto';
            fullscreenImage.style.height = 'auto';
            fullscreenFilename.textContent = '';
            delete fullscreenOverlay.dataset.currentId;
            fullscreenOpenLink.href = '#';
            hideAllMenus();
        }

        fullscreenOverlay.addEventListener('click', (e) => {
            // Hide if the click is on the overlay itself, but not on the image or the action button/link
            if (e.target.closest('.fullscreen-actions') || e.target === fullscreenImage) {
                return;
            }
            hideFullscreen();
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && fullscreenOverlay.classList.contains('show')) {
                hideFullscreen();
            }
        });

        // --- Fullscreen Action Listeners ---
        /**
         * Gets the DOM element for the image card currently being shown in the fullscreen preview.
         * @returns {HTMLElement|null}
         */
        function getCurrentFullscreenCard() {
            const id = fullscreenOverlay.dataset.currentId;
            if (!id) return null;
            return document.querySelector(`.image-card[data-id="${id}"]`);
        }

        fullscreenMenuBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            const menu = fullscreenDropdownMenu;
            const isShown = menu.classList.contains('show');
            hideAllMenus();
            if (!isShown) menu.classList.add('show');
        });

        fullscreenDeleteBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            const card = getCurrentFullscreenCard();
            if (card) showDeleteConfirm(card);
        });

        fullscreenDownloadBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            const card = getCurrentFullscreenCard();
            if (card) downloadImage(card);
        });

        fullscreenDropdownMenu.addEventListener('click', (e) => {
            e.stopPropagation();
            const action = e.target.dataset.action;
            const card = getCurrentFullscreenCard();
            if (!card || !action) return;
            if (action === 'rename') showRenameModal(card);
            if (action === 'info') showInfo(card);
            hideAllMenus();
        });
        // --- Menu, Modal, and Selection Logic ---

        /**
         * Hides all currently visible dropdown menus.
         */
        function hideAllMenus() {
            document.querySelectorAll('.dropdown-menu.show, .nav-dropdown-menu.show').forEach(menu => menu.classList.remove('show'));
        }

        /**
         * Displays the info modal with details about the given image card.
         * @param {HTMLElement} card - The image card to show info for.
         */
        function showInfo(card) {
            const sizeInBytes = card.dataset.size;
            const modifiedDate = new Date(card.dataset.lastmodifiedat);

            const formattedSize = formatBytes(sizeInBytes);
            const formattedModifiedDate = modifiedDate.toLocaleString(undefined, { dateStyle: 'medium', timeStyle: 'short' });

            infoFilename.textContent = card.dataset.filename;
            infoDetails.innerHTML = `
                <div><strong>Type:</strong> ${card.dataset.type}</div>
                <div><strong>Resolution:</strong> ${card.dataset.resolution}</div>
                <div><strong>Size:</strong> ${formattedSize}</div>
                <br>
                <div><strong>Modified:</strong> ${formattedModifiedDate}</div>
            `;
            infoModal.classList.add('show');
            hideAllMenus();
        }

        function hideInfo() {
            infoModal.classList.remove('show');
        }

        function formatBytes(bytes, decimals = 2) {
            const numBytes = Number(bytes);
            if (isNaN(numBytes) || numBytes === 0) return '0 KB';

            const k = 1024;
            const dm = decimals < 0 ? 0 : decimals;

            if (numBytes < k * k) { // Less than 1 MB, show in KB
                return `${(numBytes / k).toFixed(dm)} KB`;
            }
            return `${(numBytes / (k * k)).toFixed(dm)} MB`;
        }

        /**
         * Shows the rename modal and pre-populates it with the image's current name.
         * @param {HTMLElement} card - The image card to be renamed.
         */
        function showRenameModal(card) {
            const oldFilename = card.dataset.filename;

            // Use a regex to reliably separate the basename from a known image extension.
            const extensionRegex = /\.[^.]+$/;
            const match = oldFilename.match(extensionRegex);

            let basename;
            let extension;

            if (match) {
                extension = match[0]; // e.g., ".jpg", ".png"
                basename = oldFilename.substring(0, oldFilename.length - extension.length);
            } else {
                // If no known extension is found, treat the whole string as the basename.
                extension = '';
                basename = oldFilename;
            }

            // Populate the new input fields
            renameBasenameInput.value = basename;
            renameExtensionSpan.textContent = extension;

            renameModal.classList.add('show');
            hideAllMenus();
            // Set up the save button to call executeRename
            renameSaveBtn.onclick = () => executeRename(card.dataset.id);
            // Store the old filename and original extension on the modal so the 'Enter' key listener and save function can use it
            renameModal.dataset.originalExtension = extension;
        }

        function hideRenameModal() {
            renameModal.classList.remove('show');
        }

        /**
         * Executes the PATCH request to rename a file.
         * @param {string} id - The ID of the image to rename.
         */
        async function executeRename(id) {
            const extension = renameModal.dataset.originalExtension;
            const newBasename = renameBasenameInput.value.trim();
            
            if (!newBasename) {
                showToast('Filename cannot be empty.');
                return;
            }

            const newFilename = newBasename + extension;

            if (newFilename === document.querySelector(`.image-card[data-id="${id}"]`).dataset.filename) {
                hideRenameModal(); // No change, just close modal
                return;
            }

            try {
                const response = await fetch(`/pictures/${id}`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ newFilename })
                });
                const result = await response.json();
                if (!response.ok) throw new Error(result.message || 'Failed to update filename.');
                
                showToast(result.message);
                hideRenameModal();
                await refreshGallery();
            } catch (error) {
                showToast(`Error: ${error.message || 'Could not connect to server.'}`);
            }
        }

        // --- Conflict Resolution Logic ---

        function handleConflicts(conflicts) {
            conflictQueue = conflicts;
            processNextConflict();
        }

        function processNextConflict() {
            if (conflictQueue.length === 0) {
                refreshGallery();
                showView('gallery', true);
                return;
            }
            const conflict = conflictQueue.shift();
            showConflictModal(conflict);
        }

        function showConflictModal(conflict) {
            const { originalFilename, tempPath, existingId } = conflict;
            conflictFilename.textContent = originalFilename;

            const extensionRegex = /\.[^.]+$/;
            const match = originalFilename.match(extensionRegex);
            const extension = match ? match[0] : '';
            const basename = originalFilename.replace(extensionRegex, '');

            conflictBasenameInput.value = `${basename} (1)`;
            conflictExtensionSpan.textContent = extension;

            // Show/hide overwrite button based on whether there's an existing image to overwrite.
            // If existingId is null, it's a duplicate within the same upload batch.
            if (existingId) {
                conflictOverwriteBtn.style.display = 'inline-block';
            } else {
                conflictOverwriteBtn.style.display = 'none';
            }

            conflictModal.classList.add('show');

            // Wire up buttons for the current conflict
            conflictSkipBtn.onclick = () => resolveConflict('skip', { tempPath, originalFilename });
            conflictOverwriteBtn.onclick = () => resolveConflict('overwrite', { tempPath, existingId });
            conflictRenameBtn.onclick = () => {
                const newBasename = conflictBasenameInput.value.trim();
                if (!newBasename) return showToast('New filename cannot be empty.');
                const newFilename = newBasename + extension;
                resolveConflict('rename', { tempPath, newFilename, originalFilename });
            };
        }

        function hideConflictModal() {
            conflictModal.classList.remove('show');
        }

        async function resolveConflict(action, data) {
            try {
                const response = await fetch('/pictures/resolve-conflict', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action, ...data })
                });
                const result = await response.json();
                if (!response.ok) throw new Error(result.message);
                showToast(result.message);
                hideConflictModal();
                processNextConflict(); // Move to the next conflict in the queue
            } catch (error) {
                showToast(`Error: ${error.message}`);
            }
        }

        function showDeleteConfirm(card) {
            const ids = card ? [card.dataset.id] : Array.from(document.querySelectorAll('.image-card.selected')).map(c => c.dataset.id);
            if (ids.length === 0) return;

            const deleteModalText = deleteConfirmModal.querySelector('p');
            deleteModalText.textContent = `Are you sure you want to delete ${ids.length} image(s)?`;
            
            deleteConfirmModal.classList.add('show');
            deleteConfirmBtn.onclick = () => executeDelete(ids);
        }

        function hideDeleteConfirm() {
            deleteConfirmModal.classList.remove('show');
        }

        function updateSelectionUI() {
            const allCards = document.querySelectorAll('.image-card');
            const selectedCards = document.querySelectorAll('.image-card.selected');
            const isAnythingSelected = selectedCards.length > 0;

            const showSelectionHeader = selectionModeActive || isAnythingSelected;
            if (showSelectionHeader) {
                // In selection mode, show the right buttons
                gallerySelectBtn.style.display = 'none';
                gallerySelectAllBtn.style.display = 'inline-block';
                galleryDeleteBtn.style.display = isAnythingSelected ? 'inline-block' : 'none';

                // Update text for the select all/unselect all button
                if (allCards.length > 0 && selectedCards.length === allCards.length) {
                    gallerySelectAllBtn.textContent = 'Unselect All';
                } else {
                    gallerySelectAllBtn.textContent = 'Select All';
                }

                headerMain.style.display = 'none';
                headerSelection.style.display = 'flex';
                selectionCount.textContent = `${selectedCards.length} selected`;
            } else {
                // Not in selection mode, show the default "Select" button
                gallerySelectBtn.style.display = 'inline-block';
                gallerySelectAllBtn.style.display = 'none';
                galleryDeleteBtn.style.display = 'none';

                headerMain.style.display = 'flex';
                headerSelection.style.display = 'none';
                selectionModeActive = false; // Ensure mode is off if header is hidden
            }
        }

        function deselectAll() {
            document.querySelectorAll('.image-card.selected').forEach(card => {
                card.classList.remove('selected');
            });
            selectionModeActive = false;
            updateSelectionUI();
        }

        function selectAll() {
            // Only works if gallery is active
            if (!galleryView.classList.contains('active')) return;
            document.querySelectorAll('.image-card').forEach(card => card.classList.add('selected'));
            selectionModeActive = true;
            updateSelectionUI();
        }

        // Deletes all currently selected images.
        function deleteSelected() {
            const selectedCards = document.querySelectorAll('.image-card.selected');
            if (selectedCards.length === 0) return;
            showDeleteConfirm(null); // Pass null to indicate it's a bulk delete
        }

        // --- Global Event Listeners ---

        // Use event delegation for all actions within the gallery
        gallery.addEventListener('click', (e) => {
            const card = e.target.closest('.image-card');
            if (card) {
                handleCardClick(card);
            }
        });

        async function downloadImage(card) {
            hideAllMenus();
            const url = card.dataset.link;
            const filename = card.dataset.filename;

            // Modern approach: File System Access API (Chrome, Edge, etc.)
            if ('showSaveFilePicker' in window) {
                try {
                    const response = await fetch(url);
                    if (!response.ok) throw new Error('Network response was not ok.');

                    const blob = await response.blob();
                    const mimeType = blob.type || 'application/octet-stream';

                    const lastDot = filename.lastIndexOf('.');
                    const fileExtension = (lastDot > 0) ? filename.substring(lastDot) : '';

                    const pickerOpts = {
                        suggestedName: filename,
                        types: [{
                            description: 'Image File',
                            accept: { [mimeType]: [fileExtension] }
                        }]
                    };

                    const handle = await window.showSaveFilePicker(pickerOpts);
                    const writable = await handle.createWritable();
                    await writable.write(blob);
                    await writable.close();

                    showToast('Image downloaded successfully.');
                } catch (err) {
                    if (err.name !== 'AbortError') {
                        console.error('Failed to download image:', err);
                        showToast('Failed to download image.', true);
                    }
                }
            } else {
                // Fallback for Firefox, Safari, etc.
                const link = document.createElement('a');
                link.href = url;
                link.download = filename;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
        }

        // Close menus when clicking anywhere else
        document.addEventListener('click', hideAllMenus);


        // Add event listeners for selection bar
        selectionCloseBtn.addEventListener('click', deselectAll);
        galleryDeleteBtn.addEventListener('click', deleteSelected);

        // Add event listener for 'Enter' key in rename modal
        renameBasenameInput.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                renameSaveBtn.click(); // Programmatically click the save button
            }
        });

        // Add event listener for Ctrl+A to select/unselect all
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.key === 'a') {
                if (document.activeElement.tagName === 'INPUT' || document.activeElement.tagName === 'TEXTAREA') {
                    return;
                }
                e.preventDefault();
                
                const allCards = document.querySelectorAll('.image-card');
                const selectedCards = document.querySelectorAll('.image-card.selected');

                if (allCards.length > 0 && selectedCards.length === allCards.length) {
                    deselectAll();
                } else {
                    selectAll();
                }
            }
        });

        // --- App Initialization ---
        /**
         * Initializes the application state on page load, applying saved user preferences.
         */
        function initializeApp() {
            const savedViewSize = localStorage.getItem('galleryViewSize') || '32';
            applyViewSize(savedViewSize);

            const savedSortKey = localStorage.getItem('gallerySortKey') || 'modified-desc';
            applySort(savedSortKey);
        }

        initializeApp();
    </script>

